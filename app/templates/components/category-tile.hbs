<h3 class="categoryHeader">{{category.name}} Posts</h3>

<div class="categoryPostList">
    {{#each category.posts as |post|}}
    <div class="categoryPostItem">
      <div class="categoryPostImage" style="background: url('{{post.image}}') no-repeat; background-size: cover;">
      </div>
      <div class="categoryPostContent">
        <h2>{{post.title}}</h2>
        <h4>{{post.author}}</h4>
        <div class="postBtns">
          {{edit-post post=post editPost="editPost"}}
          <button {{action 'delete' post}}>Delete Post</button>
        </div>
      </div>
    </div>
    {{/each}}
</div>
