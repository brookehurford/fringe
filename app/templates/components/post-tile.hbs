<div class="postItem">
  {{#link-to 'post' post.id}}<div class="postImage" style="background: url('{{post.image}}') no-repeat; background-size: cover;">
  </div>{{/link-to}}
  <div class="postContent">
    <p class="category">{{post.category.name}}</p>
    <h2 class="title">{{post.title}}</h2>
    <p class="authorDate">{{post.author}} <span class="space">|</span>{{post.date}}</p>
    <p class="summary">{{post.summary}}</p>
  </div>
</div>
